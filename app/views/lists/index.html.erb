<div class="banner">

  <div class="container">
  <h1>Your listing Movies Repository</h1>
    <div class="row justify-content-center">
      <div class="col-3">
        <button type="button" class="btn btn-primary btn-sm">
          <%= link_to 'New List', new_list_path %>
        </button>
      </div>
    </div>
  </div>
</div>

<div class="cards-container">
  <% @lists.each do |list| %>
    <div class="card-body">
      <img src="https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=400&q=80" alt="">
          <h5 class="card-title">
            <%= link_to list.name, list_path(list) %>
          </h5>
    </div>
  <% end %>
</div>
